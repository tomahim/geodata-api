div#editDetails(ng-show="cityToSave")
	h3 Données trouvées
	form(id="cityDetailsForm" name="cityDetails" ng-submit="saveCity(cityDetails)" method="POST")
		label(for="name") Name
		input(id="name" type="text" ng-model="cityToSave.name")
		label(for="name_url") Name url
		input(id="name_url" type="text" ng-model="cityToSave.name_url")
		label(for="lat") Latitude
		input(id="lat" type="text" ng-model="cityToSave.lat")
		label(for="lng") Longitude
		input(id="lng" type="text" ng-model="cityToSave.lng")
		label(for="zoom") Zoom
		input(id="zoom" type="number" min="0" ng-model="cityToSave.zoom")

		div.notfound(ng-show="cityToSave && cityToSave.gmaps_types == undefined") gmaps_types non trouvé
		div.notfound(ng-show="cityToSave && cityToSave.gmaps_bounds == undefined") gmaps_bounds non trouvé
		div.notfound(ng-show="cityToSave && cityToSave.gmaps_viewport == undefined") gmaps_viewport non trouvé
		div.notfound(ng-show="cityToSave && cityToSave.gmaps_location_type == undefined") gmaps_location_type non trouvé

		input(type="submit" ng-show="!alreadyInDb" value="Enregistrer")
	div.clearer